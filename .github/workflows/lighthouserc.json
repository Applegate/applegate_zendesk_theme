{
  "ci": {
    "collect": {
      "numberOfRuns": 1,
      "settings": {
        "emulatedFormFactor": "desktop"
      }
    },
    "assert": {
      "assertMatrix": [
        {"assertions": {
          "color-contrast": ["error", {}]
        }
        },
        {
          "matchingUrlPattern": "hc/en-us$",
          "assertions": {
            "color-contrast": ["warn", {}]
          }
        },
        {
          "matchingUrlPattern": ".+categories.+",
          "assertions": {
            "color-contrast": ["warn", {}]
          }
        },
        {
          "matchingUrlPattern": ".+sections.+",
          "assertions": {
            "color-contrast": ["warn", {}]
          }
        },
        {
          "matchingUrlPattern": ".+articles.+",
          "assertions": {
            "color-contrast": ["warn", {}]
          }
        },
        {
          "matchingUrlPattern": "requests/new$",
          "assertions": {
            "color-contrast": ["warn", {}]
          }
        },
        {
          "matchingUrlPattern": ".+search.+",
          "assertions": {
            "color-contrast": ["warn", {}]
          }
        },
        {
          "matchingUrlPattern": "community/topics$",
          "assertions": {
            "color-contrast": ["warn", {}]
          }
        },
        {
          "matchingUrlPattern": ".+community/topics.+",
          "assertions": {
            "color-contrast": ["warn", {}]
          }
        },
        {
          "matchingUrlPattern": "community/posts$",
          "assertions": {
            "color-contrast": ["warn", {}]
          }
        },
        {
          "matchingUrlPattern": ".+community/posts.+",
          "assertions": {
            "color-contrast": ["warn", {}]
          }
        },
        {
          "matchingUrlPattern": ".+profiles.+",
          "assertions": {
            "color-contrast": ["warn", {}]
          }
        }
      ]
    }
  }
}
